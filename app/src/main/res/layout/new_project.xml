<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:background="@color/colorlog"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        style="@android:style/TextAppearance.Medium.Inverse"
        android:text="Ingrese el nuevo proyecto"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="6dp"
            android:src="@drawable/tower_flag"
            android:layout_weight="0.3"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="0.7"
            android:orientation="vertical">
            <EditText
                android:id="@+id/nombreproyect"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:hint=" Nombre del proyecto"/>
            <Spinner
                android:id="@+id/category"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5">
            </Spinner>

        </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btnAceptar"
            android:background="@color/colorlog"
            android:layout_weight="0.5"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium.Inverse"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/acept"/>

        <Button
            android:id="@+id/btnCancel"
            android:background="@color/colorframes"
            android:layout_weight="0.5"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/cancel"/>

    </LinearLayout>


</LinearLayout>